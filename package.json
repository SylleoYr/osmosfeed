{
  "name": "osmosfeed-root",
  "private": true,
  "version": "1.1.0",
  "description": "Monorepo root",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "npm run build -w ./packages/osmosfeed && npm start -w ./packages/sandbox",
    "build": "npm run build -w ./packages/osmosfeed",
    "test": "npm run test -w ./packages/feed-parser -w ./packages/osmosfeed",
    "test:watch": "concurrently npm:test:watch:*",
    "test:watch:feed-parser": "npm run test:watch -w ./packages/feed-parser",
    "test:watch:osmosfeed": "npm run test:watch -w ./packages/osmosfeed",
    "clean": "npm run clean -w ./packages/feed-parser -w ./packages/osmosfeed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/osmoscraft/osmosfeed.git"
  },
  "keywords": [],
  "author": "osmoscraft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/osmoscraft/osmosfeed/issues"
  },
  "homepage": "https://github.com/osmoscraft/osmosfeed#readme",
  "workspaces": [
    "./packages/*"
  ],
  "devDependencies": {
    "concurrently": "^6.4.0",
    "prettier": "^2.3.2"
  }
}
